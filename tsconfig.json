{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "outDir": "lib",
    "lib": ["ES2020", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "**/__tests__/*", "**/*.test.@(ts|tsx)"]
}
